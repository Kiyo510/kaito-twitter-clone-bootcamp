require 'rails_helper'

RSpec.describe UsersController, type: :request do
  describe 'POST /users/new' do
    context 'emailとpasswordが入力されている場合' do
      it 'ユーザー登録に成功すること' do
        expect{
          post users_path, params: { user: { email: 'hakase@example.com', password: 'sample_password' } }
        }.to change(User, :count).by(1)
      end
    end

    # context 'emailが空文字の場合' do
    #   it 'ユーザー登録に失敗すること' do
    #   end
    # end
  end
end
