require 'rails_helper'

RSpec.describe UsersController, type: :request do
  describe 'POST /users/new' do
    context 'emailとpasswordが入力されている場合' do
      let!(:user) { build(:user, email:'nano@example.com') }

      it 'ユーザー登録に成功すること' do
        # binding.irb
        expect{
          # post :create, params: { user: attributes_for(:user) }
          user.posts.create( :user )
        }.to change(User, :count).by(1)
      end
    end

    # context 'emailが空文字の場合' do
    #   let!(:user) { build(:user, email:'') }

    #   it 'ユーザー登録に失敗すること' do
    #   end
    # end
  end
end
