<h1>マイページ</h1>

<h3>ユーザー名</h3>
<p><%= @user.email %></p>
<h3>アカウント作成日</h3>
<p><%= @user.created_at %></p>
<h3>アカウント更新日</h3>
<p><%= @user.updated_at %></p>
<%= button_to "ユーザー編集", edit_user_path(@user.id), method: :get %>

<% if session[:user_id] %>
 <p>現在ログインしているユーザーのid: <%= session[:user_id] %></p>
 <%= button_to "ログアウト", logout_path, method: :delete %>
<% end %>
